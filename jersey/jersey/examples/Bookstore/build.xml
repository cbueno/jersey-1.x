<project name="Bookstore" default="default" basedir=".">
    <description>Builds, tests, and runs the project Bookstore.</description>
    <import file="nbproject/build-impl.xml"/>
    
    <property environment="env"/>
    <property name="as.home" value="${env.AS_HOME}"/>

     <condition property="ext" value="" else=".bat">
        <os family="unix"/>
    </condition>

    <property name="javac.source"  value="1.5"/>
    <property name="javac.target"  value="1.5"/>

    <target name="start-glassfish">
        <exec executable="${as.home}/bin/asadmin${ext}">
	  <arg line="start-domain"/>
        </exec>
    </target>
    
    <target name="run-on-glassfish" depends="start-glassfish,dist" description="Deploys the example onto glassfish.">
        <exec executable="${as.home}/bin/asadmin${ext}">
	  <arg line="deploy dist/Bookstore.war"/>
        </exec>
    </target>

    <target name="default" depends="dist"/>
</project>
