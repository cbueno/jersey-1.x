<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
      <groupId>com.sun.jersey.glassfish.v3.osgi</groupId>
      <artifactId>osgi-modules</artifactId>
      <version>1.1.2-ea-SNAPSHOT</version>
    </parent>
    <artifactId>jersey-gf-bundle</artifactId>
    <packaging>jar</packaging> 
    <name>Jersey bundle repackaged as OSGi module for GlassFish</name>
    <description>Module repackaging of the Jersey bundle</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <stripVersion>true</stripVersion>
                            <artifactItems>
                                <artifactItem>
                                  <groupId>org.glassfish.external</groupId>
                                  <artifactId>asm-all-repackaged</artifactId>
                                  <version>3.0-b43</version>
                                  <type>jar</type>
                                  <overWrite>false</overWrite>
                                  <outputDirectory>${osgi.deps.directory}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.sun.jersey.glassfish.v3.osgi</groupId>
                                    <artifactId>jackson-core-asl</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${osgi.deps.directory}</outputDirectory>
                                </artifactItem>
                                  <artifactItem>
                                    <groupId>com.sun.jersey</groupId>
                                    <artifactId>jersey-bundle</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${osgi.src.directory}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
              <artifactId>maven-antrun-plugin</artifactId>
              <executions>
                <execution>
                  <phase>package</phase>
              <configuration>
                    <tasks> <!-- download bnd tool, and create osgified jar file using it -->
                      <get src="http://www.aqute.biz/repo/biz/aQute/bnd/0.0.249/bnd-0.0.249.jar" dest="${project.build.directory}/bnd.jar"/>
                      <java jar="${project.build.directory}/bnd.jar" fork="true">
                        <arg line="wrap -output ${project.build.directory}/osgified.jar -classpath ${osgi.deps.directory}/asm-all-repackaged.jar,${osgi.deps.directory}/jackson-core-asl.jar ${osgi.src.directory}/jersey-bundle.jar"/>
                      </java>
                      <unzip src="${project.build.directory}/osgified.jar" dest="${jar.messing.directory}"/> 
                      <manifest file="${jar.messing.directory}/META-INF/MANIFEST.MF" mode="update">
                          <attribute name="probe-provider-xml-file-names" value="gfprobe-provider.xml"/>
                          <attribute name="DynamicImport-Package" value="org.glassfish.flashlight.provider"/>
                      </manifest>
                      <copy file="src/main/resources/gfprobe-provider.xml" todir="${jar.messing.directory}"/>
                      <jar destfile="${project.build.directory}/osgified.jar" basedir="${jar.messing.directory}" manifest="${jar.messing.directory}/META-INF/MANIFEST.MF"/>
                      <move file="${project.build.directory}/osgified.jar" tofile="${project.build.directory}/${project.artifactId}-${project.version}.jar"/>
                      <delete file="${project.build.directory}/bnd.jar"/>
                    </tasks>
              </configuration>
                  <goals>
                    <goal>run</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
          <groupId>org.glassfish.external</groupId>
          <artifactId>asm-all-repackaged</artifactId>
          <version>3.0-b43</version>
        </dependency>
         <dependency>
          <groupId>com.sun.jersey.glassfish.v3.osgi</groupId>
          <artifactId>jackson-core-asl</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-bundle</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <properties>
        <osgi.deps.directory>${project.build.directory}/osgi.deps</osgi.deps.directory>
        <osgi.src.directory>${project.build.directory}/osgi.src</osgi.src.directory>
        <jar.messing.directory>${project.build.directory}/jar.messing</jar.messing.directory>
    </properties>
    <repositories>
      <repository>
        <id>gf.djn.repo</id>
        <url>http://download.java.net/maven/glassfish</url>
      </repository>
    </repositories>
</project>
